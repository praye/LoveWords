<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/loadNotice"
        android:text="Words I'm Learning. A list of all the words you're learning. Unfortunately, you're not learning any words yet. Start your learning now."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"/>

    <tedking.lovewords.LoadmoreListView
        android:id="@+id/loadMoreListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
